<div class="page-login">
  <div class="ui center aligned segment">
    <h2><i class="clipboard outline icon"></i> Course Management App</h2>
  </div>
  <h1 class="ui center aligned header"> Log In</h1>
  <div class="ui centered grid container">
    <div class="seven wide column">
      <% unless flash[:message].nil? %>
        <div class="ui icon warning message">
          <i class="lock icon"></i>
          <div class="content">
            <div class="header">
              Login failed!
            </div>
            <p><%= flash[:message] %></p>
          </div>
        </div>
      <% end %>
      <div class="ui fluid card">
        <div class="content">
          <%= form_tag("/authenticate", method: 'post', class: 'ui form') do %>
              <div class="field">
                <%= label_tag(:username, "Username") %>
                <%= text_field_tag(:username, '', placeholder: 'Username') %>
              </div>
              <div class="field">
                <%= label_tag(:password, "Password") %>
                <%= password_field_tag(:password, '', placeholder: 'Password') %>
              </div>
              <button class="ui primary centered labeled icon button" type="submit">
                <i class="unlock alternate icon"></i>
                Login
              </button>
              <div class="ui error message"></div>
          <% end %>

        </div>
      </div>

      <div class="ui message">
        New to us? <a href="/sign_up">Sign Up</a>
      </div>
    </div>
  </div>
</div>