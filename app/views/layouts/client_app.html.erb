<!DOCTYPE html>
<html>
<head>
  <title>ClassManagementApp</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track'=> 'reload' %>
  <%= stylesheet_link_tag '/lib/semantic-ui/semantic.min', media: 'all', 'data-turbolinks-track' => 'reload' %>
  <%= javascript_include_tag '/lib/semantic-ui/semantic.min', 'data-turbolinks-track' => 'reload' %>
</head>

<body>
<script type="text/javascript">
    $(document).ready(function () {
        $(".item").removeClass('active');
        $("#<%= controller_name %>").addClass('active');
        $("#menu-toggle").click(function(){
          $("#sidebar-main")
              .sidebar('setting', 'transition', 'overlay')
              .sidebar('toggle');
        });


    });

</script>

<div id="sidebar-main" class="ui inverted left vertical sidebar icon menu">
  <a class="item" id="courses">
    <i class="list ol icon"></i>
    Courses
  </a>
  <a class="item" id="professor">
    <i class="address card icon"></i>
    Professors
  </a>
  <a class="item" id="ratings">
    <i class="folder open outline icon"></i>
    Ratings Report
  </a>
</div>

<!-- Top Fixed Menu -->
<div class="ui top fixed menu">
  <a class="item" id="menu-toggle">
    <i class="bars icon"></i>
  </a>
  <div class="item">
    <i class="clipboard outline icon"></i>
  </div>
  <div class="item">
    <h2>Course Management App</h2>
  </div>
  <div class="right menu">
    <div class="item"><em>Signed in as <strong><%= session[:username] %></strong></em>
      (<a href="/logout">Logout</a>)
    </div>
  </div>
</div>

<div class="pusher" style="margin-top: 60px">
  <!-- Page Content Here-->
  <div style='width: 100%; background-color: cornflowerblue; padding-top: 10px; padding-bottom: 10px; margin-bottom: 20px'>
    <h3 style="color: #ffffff;"><%= @menu_name %></h3>
  </div>
  <%= yield %>
</div>
</body>
</html>
